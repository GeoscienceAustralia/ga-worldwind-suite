<?xml version="1.0" encoding="UTF-8"?>
<Layer version="1" layerType="ScreenOverlayLayer">
	
	<DisplayName>Overlay01</DisplayName>
	
	<URL>http://somewhere.com/Something.html</URL>
	
	<!-- 
		Note: 
		In a real file, the URL will supersede any explicit content found. 
		This is included here for illustration only.
	-->
	<Content>
		<![CDATA[
		<html><body>This is my dummy content</body></html>
		]]>
	</Content>
	
	<!-- 
		Valid values:
		- CENTER (Default)
		- NORTH
		- NORTHEAST
		- EAST
		- SOUTHEAST
		- SOUTH
		- SOUTHWEST
		- WEST
		- NORTHWEST
	 -->
	<Position>SOUTH</Position>
	
	<DrawBorder>true</DrawBorder>
	<BorderWidth>4</BorderWidth>
	<BorderColor red="128" green="128" blue="255"/>
	
	<MinHeight>100px</MinHeight>
	<MaxHeight>40%</MaxHeight>
	
	<MinWidth>400</MinWidth> <!-- Default unit is px -->
	<MaxWidth>500px</MaxWidth>
	
</Layer>